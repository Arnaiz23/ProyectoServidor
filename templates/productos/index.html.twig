{% extends 'comun/comun.html.twig' %}
{# {% block header %}{{include('comun/header.php')}}{% endblock %} #}
{% block claseProducto1 %}activeLink{% endblock %}
{% block claseProducto %}class="activeLink"{% endblock %}
{% block body2 %}
     <div id="central" class="centralTablas">
            <div id="add">
                <button class="btn btn-success" id="administrarProductos">AÑADIR PRODUCTO</button>
            </div>
            <div id="tablaData">
                <table>
                    <tr>
                        <th>ID</th>
                        <th>NOMBRE</th>
                        <th>MARCA</th>
                        <th>TIPO</th>
                        <th>DESCRIPCION CORTA</th>
                        <th>DESCRIPCION LARGA</th>
                        <th>PRECIO</th>
                        <th>DEPORTE</th>
                        <th>DISPONIBILIDAD</th>
                        <th>IMAGEN</th>
                        <th>EDITAR</th>
                        <th>ELIMINAR</th>
                    </tr>
                    {% for valor in indice %}
                        <tr>
                            <td>{{valor.id}}</td>
                            <td>{{valor.nombre}}</td>
                            <td>{{valor.marca}}</td>
                            <td>{{valor.tipo}}</td>
                            <td>{{valor.descripcionCorta}}</td>
                            <td>{{valor.descripcionLarga}}</td>
                            <td>{{valor.precio}}€</td>
                            <td>{{valor.deporte}}</td>
                            <td>{{valor.disponibilidad}}</td>
                            <td>{{valor.imagen}}</td>
                            <td>
                                <span class="material-icons-outlined">
                                    settings
                                </span>
                            </td>
                            <td>
                                <span class="material-icons-outlined">
                                    delete
                                </span>
                            </td>
                        </tr>
                    {% endfor %}
                </table>
            </div>
        </div>
{% endblock %}
{% block javascript %}
    const productos = document.querySelector("#administrarProductos");
    productos.addEventListener("click",()=>{
        location.href = "add-productos";
        {# alert("Añadir usuario"); #}
    });
{% endblock %}